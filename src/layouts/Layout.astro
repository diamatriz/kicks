---
import Footer from "../components/Base/Footer/Footer.astro";
import Header from "../components/Base/Header/Header.astro";
import './../style.css'

const { title, bodyClass } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">
		<title>Astro Basics</title>
	</head>
	<body class={bodyClass}>
		<div class="wrapper">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>

